@model ChatApp_Model.Models.LoggedUser
@{
    ViewData["Title"] = "Chatting";
}

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

<head>

</head>

<body>
    <nav class="nav navbar-default">
        <div class="navbar-brand">

            <span style="float:right;">Welcome @Model.FullName</span>


        </div>
    </nav>
    <br />
    <div class="clearfix"></div>
    @using (Html.BeginForm())
    {
        <div class="container">
            
            <div class="row">
                <div class="col-md-4">

                    <div class="form-group">
                        <select id="ddlfriend" name="ddlfriend" class="form-control">
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="text" name="txtmsg" id="txtmsg" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="button" value="send" class="btn btn-success" name="btnsend" id="btnsend" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="panel panel-success">
                        <div class="panel-heading">
                            <div class="panel-title">
                                Messages
                            </div>
                            <div class="panel-footer" style="min-height:400px;">
                                <div id="divmsg">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
<script type="text/javascript">
        $(document).ready(function () {
            getmyfriends();
            $("#btnsend").click(function () {
                send();
            });

            function getmyfriends()
            {
                var userData = {};
                userData.UserName = "@Model.UserName";
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("GetFriendList", "Home")",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(userData),
                    dataType: "json",
                    success: function (r) {

                        var ddlfrined = $("#ddlfriend");
                         ddlfrined.empty().append('<option selected="selected" value="0">select</option>');
                        for (var i = 0; i < r.length; i++) {

                            ddlfrined.append($("<option></option>").val(r[i].value).html(r[i].text));
                        }
                    },
                    error: function (r) {
                        alert("error");
                    }
                });
            }
            setInterval(function () {
                var userData = {};
                userData.UserName = "@Model.UserName";
                    $.ajax({
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(userData),
                    url: "@Url.Action("ReceiveMsg","Home")",
                    dataType: "json",
                    success: function (response) {
                        if (response != null) {
                            var data = $("#divmsg").html();
                            $("#divmsg").html(data + "<br>Friend:" + response);
                        }
                        else {

                        }


                    },
                    error: function (response) {

                    }
                });
            }, 5000);
            function send() {

                var dataToPost = {};
                dataToPost.Message = $("#txtmsg").val();
                dataToPost.Friend = $("#ddlfriend").val();
                $("#txtmsg").val("");

                $.ajax({
                     url: "@Url.Action("SendMsg","Home")",
                    type: "POST",
                    dataType: "json",
                    data: JSON.stringify(dataToPost),
                    cache: false,
                    contentType: "application/json; charset=utf-8",
                    success: function (response) {
                        var data = $("#divmsg").html();
                        $("#divmsg").html(data + "<br>Me :" + dataToPost.Message);

                    },
                    error: function (response) {

                    }
                });
            }


        });
</script>


